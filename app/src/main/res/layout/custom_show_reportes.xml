<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/icons"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="8dp"
    app:contentPadding="10dp"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent">
<ImageView
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:id="@+id/imageShowReportes"
    android:contentDescription="@string/content_picture"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@mipmap/ic_reports"/>
<LinearLayout
    android:id="@+id/leanerText"
    android:layout_toRightOf="@+id/imageShowReportes"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_marginStart="16dp"
    android:layout_marginTop="22dp"
    android:layout_height="wrap_content">
        <TextView
            android:id="@+id/TVshowReportes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_reportes_daily"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="@color/primary_text"
            />

</LinearLayout>


</RelativeLayout>
</android.support.v7.widget.CardView>